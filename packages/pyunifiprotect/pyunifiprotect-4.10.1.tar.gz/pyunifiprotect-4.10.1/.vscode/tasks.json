{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format && Lint Code",
            "type": "shell",
            "command": "${workspaceFolder}/.bin/format-code && ${workspaceFolder}/.bin/lint-code",
            "problemMatcher": []
        },
        {
            "label": "Test Code",
            "type": "shell",
            "command": "${workspaceFolder}/.bin/test-code",
            "problemMatcher": []
        },
        {
            "label": "Update requirements",
            "type": "shell",
            "command": "${workspaceFolder}/.bin/update-requirements && ${workspaceFolder}/.bin/install-requirements",
            "problemMatcher": []
        },
        {
            "label": "MkDocs: Serve",
            "type": "shell",
            "command": "mkdocs serve",
            "problemMatcher": []
        },
        {
            "label": "MkDocs: Build",
            "type": "shell",
            "command": "mkdocs build",
            "problemMatcher": []
        }
    ]
}
