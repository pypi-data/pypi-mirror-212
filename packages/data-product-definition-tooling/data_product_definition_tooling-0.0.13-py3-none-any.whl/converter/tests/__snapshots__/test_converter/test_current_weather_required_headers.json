{
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "properties": {
          "message": {
            "default": "Authorization is required to access this data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "AuthorizationRequired",
        "type": "object"
      },
      "AuthorizationRequiredForUnpublished": {
        "properties": {
          "message": {
            "default": "Unpublished data sources require preview token",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object"
      },
      "ConsentRequired": {
        "properties": {
          "message": {
            "default": "Consent is required to access this data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "ConsentRequired",
        "type": "object"
      },
      "CurrentWeatherMetricRequest": {
        "properties": {
          "lat": {
            "description": "The latitude coordinate of the desired location",
            "example": 60.192059,
            "maximum": 90.0,
            "minimum": -90.0,
            "title": "Latitude",
            "type": "number"
          },
          "lon": {
            "description": "The longitude coordinate of the desired location",
            "example": 24.945831,
            "maximum": 180.0,
            "minimum": -180.0,
            "title": "Longitude",
            "type": "number"
          }
        },
        "required": [
          "lat",
          "lon"
        ],
        "title": "CurrentWeatherMetricRequest",
        "type": "object"
      },
      "CurrentWeatherMetricResponse": {
        "properties": {
          "humidity": {
            "example": 72,
            "title": "Current relative air humidity in %",
            "type": "number"
          },
          "pressure": {
            "example": 1007,
            "title": "Current air pressure in hPa",
            "type": "number"
          },
          "rain": {
            "description": "If it's currently raining or not.",
            "title": "Rain status",
            "type": "boolean"
          },
          "temp": {
            "example": 17.3,
            "minimum": -273.15,
            "title": "Current temperature in Celsius",
            "type": "number"
          },
          "windDirection": {
            "example": 220.0,
            "maximum": 360.0,
            "minimum": 0.0,
            "title": "Current wind direction in meteorological wind direction degrees",
            "type": "number"
          },
          "windSpeed": {
            "example": 2.1,
            "minimum": 0.0,
            "title": "Current wind speed in m/s",
            "type": "number"
          }
        },
        "required": [
          "humidity",
          "pressure",
          "rain",
          "temp",
          "windSpeed",
          "windDirection"
        ],
        "title": "CurrentWeatherMetricResponse",
        "type": "object"
      },
      "DataSourceError": {
        "properties": {
          "error": {
            "description": "Raw error from the data source",
            "title": "Original error"
          },
          "message": {
            "default": "Data source returned an error",
            "title": "Message",
            "type": "string"
          },
          "status": {
            "description": "Status code from the data source",
            "minimum": 400.0,
            "title": "Status code",
            "type": "integer"
          }
        },
        "required": [
          "status",
          "error"
        ],
        "title": "DataSourceError",
        "type": "object"
      },
      "DataSourceNotFound": {
        "properties": {
          "message": {
            "default": "Requested data source is not found",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceNotFound",
        "type": "object"
      },
      "DataSourceTimeout": {
        "properties": {
          "message": {
            "default": "Timeout reached while communicating with the data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceTimeout",
        "type": "object"
      },
      "DataSourceUnavailable": {
        "properties": {
          "message": {
            "default": "Error while communicating with the data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceUnavailable",
        "type": "object"
      },
      "DoesNotConformToDefinition": {
        "properties": {
          "message": {
            "default": "Response from the data source does not conform to definition",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DoesNotConformToDefinition",
        "type": "object"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "title": "Detail",
            "type": "array"
          }
        },
        "title": "HTTPValidationError",
        "type": "object"
      },
      "ResponseFor401": {
        "anyOf": [
          {
            "$ref": "#/components/schemas/AuthorizationRequired"
          },
          {
            "$ref": "#/components/schemas/AuthorizationRequiredForUnpublished"
          }
        ],
        "title": "ResponseFor401"
      },
      "ResponseFor502": {
        "anyOf": [
          {
            "$ref": "#/components/schemas/DoesNotConformToDefinition"
          },
          {
            "$ref": "#/components/schemas/DataSourceError"
          }
        ],
        "title": "ResponseFor502"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "title": "Location",
            "type": "array"
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        },
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError",
        "type": "object"
      }
    }
  },
  "info": {
    "description": "Data Product for current weather with metric units",
    "title": "Current Weather (Metric)",
    "version": "1.0.0"
  },
  "openapi": "3.0.2",
  "paths": {
    "/Weather/Current/Metric": {
      "post": {
        "description": "Current weather in metric units",
        "operationId": "request_Weather_Current_Metric",
        "parameters": [
          {
            "description": "Consent token",
            "in": "header",
            "name": "x-consent-token",
            "required": true,
            "schema": {
              "description": "Consent token",
              "title": "X-Consent-Token",
              "type": "string"
            }
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "in": "header",
            "name": "authorization",
            "required": true,
            "schema": {
              "description": "The login token. Value should be \"Bearer [token]\"",
              "title": "Authorization",
              "type": "string"
            }
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "in": "header",
            "name": "x-authorization-provider",
            "required": false,
            "schema": {
              "description": "The bare domain of the system that provided the token.",
              "title": "X-Authorization-Provider",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CurrentWeatherMetricRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentWeatherMetricResponse"
                }
              }
            },
            "description": "Successful Response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            },
            "description": "Unauthorized"
          },
          "403": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            },
            "description": "Forbidden"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            },
            "description": "Not Found"
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            },
            "description": "Validation Error"
          },
          "502": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            },
            "description": "Bad Gateway"
          },
          "503": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            },
            "description": "Service Unavailable"
          },
          "504": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            },
            "description": "Gateway Timeout"
          }
        },
        "summary": "Current Weather (Metric)"
      }
    }
  }
}
