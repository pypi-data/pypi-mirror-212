{
  "components": {
    "schemas": {
      "AuthorizationRequired": {
        "properties": {
          "message": {
            "default": "Authorization is required to access this data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "AuthorizationRequired",
        "type": "object"
      },
      "AuthorizationRequiredForUnpublished": {
        "properties": {
          "message": {
            "default": "Unpublished data sources require preview token",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "AuthorizationRequiredForUnpublished",
        "type": "object"
      },
      "BasicCompanyInfoRequest": {
        "properties": {
          "companyId": {
            "description": "The ID of the company",
            "example": "2464491-9",
            "title": "Company ID",
            "type": "string"
          }
        },
        "required": [
          "companyId"
        ],
        "title": "BasicCompanyInfoRequest",
        "type": "object"
      },
      "BasicCompanyInfoResponse": {
        "properties": {
          "companyForm": {
            "example": "LLC",
            "title": "The company form of the company",
            "type": "string"
          },
          "companyId": {
            "example": "2464491-9",
            "title": "ID of the company",
            "type": "string"
          },
          "name": {
            "example": "Digital Living International Oy",
            "title": "Name of the company",
            "type": "string"
          },
          "registrationDate": {
            "example": "2012-02-23",
            "title": "Date of registration for the company",
            "type": "string"
          }
        },
        "required": [
          "name",
          "companyId",
          "companyForm",
          "registrationDate"
        ],
        "title": "BasicCompanyInfoResponse",
        "type": "object"
      },
      "ConsentRequired": {
        "properties": {
          "message": {
            "default": "Consent is required to access this data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "ConsentRequired",
        "type": "object"
      },
      "DataSourceError": {
        "properties": {
          "error": {
            "description": "Raw error from the data source",
            "title": "Original error"
          },
          "message": {
            "default": "Data source returned an error",
            "title": "Message",
            "type": "string"
          },
          "status": {
            "description": "Status code from the data source",
            "minimum": 400.0,
            "title": "Status code",
            "type": "integer"
          }
        },
        "required": [
          "status",
          "error"
        ],
        "title": "DataSourceError",
        "type": "object"
      },
      "DataSourceNotFound": {
        "properties": {
          "message": {
            "default": "Requested data source is not found",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceNotFound",
        "type": "object"
      },
      "DataSourceTimeout": {
        "properties": {
          "message": {
            "default": "Timeout reached while communicating with the data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceTimeout",
        "type": "object"
      },
      "DataSourceUnavailable": {
        "properties": {
          "message": {
            "default": "Error while communicating with the data source",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DataSourceUnavailable",
        "type": "object"
      },
      "DoesNotConformToDefinition": {
        "properties": {
          "message": {
            "default": "Response from the data source does not conform to definition",
            "title": "Message",
            "type": "string"
          }
        },
        "title": "DoesNotConformToDefinition",
        "type": "object"
      },
      "ResponseFor401": {
        "anyOf": [
          {
            "$ref": "#/components/schemas/AuthorizationRequired"
          },
          {
            "$ref": "#/components/schemas/AuthorizationRequiredForUnpublished"
          }
        ],
        "title": "ResponseFor401"
      },
      "ResponseFor502": {
        "anyOf": [
          {
            "$ref": "#/components/schemas/DoesNotConformToDefinition"
          },
          {
            "$ref": "#/components/schemas/DataSourceError"
          }
        ],
        "title": "ResponseFor502"
      },
      "UnavailableForLegalReasonsResponse": {
        "properties": {
          "reasons": {
            "description": "The reason why the data is not available",
            "title": "Reason",
            "type": "string"
          }
        },
        "required": [
          "reasons"
        ],
        "title": "UnavailableForLegalReasonsResponse",
        "type": "object"
      }
    }
  },
  "info": {
    "description": "Data Product for basic company info",
    "title": "Basic Company Info",
    "version": "1.0.0"
  },
  "openapi": "3.0.2",
  "paths": {
    "/Company/BasicInfo": {
      "post": {
        "description": "Information about the company",
        "operationId": "request_Company_BasicInfo",
        "parameters": [
          {
            "description": "Optional consent token",
            "in": "header",
            "name": "x-consent-token",
            "required": false,
            "schema": {
              "description": "Optional consent token",
              "title": "X-Consent-Token",
              "type": "string"
            }
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "in": "header",
            "name": "authorization",
            "required": false,
            "schema": {
              "description": "The login token. Value should be \"Bearer [token]\"",
              "title": "Authorization",
              "type": "string"
            }
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "in": "header",
            "name": "x-authorization-provider",
            "required": false,
            "schema": {
              "description": "The bare domain of the system that provided the token.",
              "title": "X-Authorization-Provider",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicCompanyInfoRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasicCompanyInfoResponse"
                }
              }
            },
            "description": "Successful Response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor401"
                }
              }
            },
            "description": "Unauthorized"
          },
          "403": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConsentRequired"
                }
              }
            },
            "description": "Forbidden"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceNotFound"
                }
              }
            },
            "description": "Not Found"
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnavailableForLegalReasonsResponse"
                }
              }
            },
            "description": "Unavailable for some legal reasons"
          },
          "502": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseFor502"
                }
              }
            },
            "description": "Bad Gateway"
          },
          "503": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceUnavailable"
                }
              }
            },
            "description": "Service Unavailable"
          },
          "504": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataSourceTimeout"
                }
              }
            },
            "description": "Gateway Timeout"
          }
        },
        "summary": "Basic Company Info"
      }
    }
  }
}
